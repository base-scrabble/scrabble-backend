{
  "name": "scrabble-backend",
  "version": "1.0.0",
  "description": "Backend API for Scrabble game",
  "main": "server.js",
  "type": "module",
  "engines":{
    "node": "22.x"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "migrate": "node scripts/migrate.js",
